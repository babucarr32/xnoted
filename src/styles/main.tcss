/* ===================
   Layout & Structure
   =================== */

ContentWrapper {
  layout: vertical;
  height: 100%;
}

Content {
  layout: grid;
  grid-size: 2;
  grid-columns: 1fr 3fr;
  height: 100%;
}

SideBar,
Body {
  height: 100%;
}

/* ===================
   Borders & Containers
   =================== */

CustomHeader {
  text-align: center;
  border: solid $primary;
}

Body,
Input,
InputContainer,
RadioSet,
Select,
SelectOverlay,
TextArea,
TodoContainer,
Projects,
#confirm {
  border: round $primary;
}

TodoContainer,
Projects {
  border-title-align: left;
  border-title-style: bold;
}

.box {
  height: 0%;
  border: solid $primary;
}

/* ===================
   Backgrounds
   =================== */

Todos,
Input,
Select,
RadioSet,
Projects,
#modal-dialog,
CreateToDoModal Vertical,
CreateProjectModal Vertical {
  background: transparent;
}

SelectOverlay,
TextArea {
  background: transparent !important;
}

/* ===================
   Modals
   =================== */

CreateToDoModal,
SelectProjectModal,
CreateProjectModal,
ConfirmModal,
Confirm {
  align: center middle;
}

#modal-dialog {
  height: auto;
}

#modal-hint {
  width: 100%;
  content-align: center middle;
  color: $text-muted;
  text-style: italic;
}

CreateToDoModal Vertical {
  width: 70%;
  height: 50%;
}

CreateProjectModal Vertical,
Projects {
  width: 50%;
  height: 50%;
}

#confirm {
  padding: 0;
  width: 60;
}

/* ===================
   Form Elements
   =================== */

Input,
InputContainer,
RadioSet {
  margin: 0;
}

.toggle--button {
  background: transparent;
}

RadioButton.-on .toggle--button {
  color: $primary;
}

#submit {
  width: 100%;
}

#createTodoLabel {
  margin-bottom: 1;
}

/* ===================
   Scrollbars
   =================== */

VerticalScroll,
TextArea {
  scrollbar-visibility: hidden;
}